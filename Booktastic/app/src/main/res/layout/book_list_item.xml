<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:padding="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/no_image"
                android:id="@+id/book_thumbnail" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:padding="2sp"
                android:gravity="center"
                android:textColor="#102e4a"
                android:textSize="15sp"
                android:id="@+id/publishing_date"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Page count"
                android:gravity="center"
                android:padding="2sp"
                android:textColor="#102e4a"
                android:textSize="15sp"
                android:id="@+id/book_page_count"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_seen_red"
                android:gravity="center"
                android:padding="2sp"
                android:id="@+id/read" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TO READ"
                    android:layout_gravity="center_vertical"
                    android:padding="2sp"
                    android:textColor="#f44336"
                    android:textSize="15sp"
                    android:id="@+id/read_txt"
                    />
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="Recommend by mail"
                android:background="@drawable/button"
                android:id="@+id/dPreporuci"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp"
            android:layout_weight="1"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:id="@+id/book_title"
                android:textSize="20sp"
                android:padding="2sp"
                android:layout_gravity="left"
                android:textColor="#102e4a"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author"
                android:id="@+id/book_author"
                android:textColor="#2a7f62"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="2sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:textColor="#102e4a"
                android:id="@+id/book_descr"
                android:textSize="16sp"
                android:padding="2sp"
                android:layout_gravity="left"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

